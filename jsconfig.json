{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowJs": true,
        "checkJs": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": ["**/*.js"]
}